@model CafeManager.Core.Entities.Waiter

@{
}

<div class="align-content-center">
    <h1>Edit Waiter</h1>
</div>
<form asp-controller="Waiter" asp-action="EditWaiter" method="post">
    <div class="mb-3">
        <input asp-for="Id" type="hidden" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Waiter's First Name</label>
        <input asp-for="FirstName" type="text" class="form-control" value = "@Model.FirstName"/>
    </div>
    <div class="mb-3">
        <label class="form-label">Waiter's Last Name</label>
        <input asp-for="LastName" type="text" class="form-control" value = "@Model.LastName"/>
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">
            <h3>Submit</h3>
        </button>
    </div>
    
</form>