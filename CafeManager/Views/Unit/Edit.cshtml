@model CafeManager.Core.Entities.Unit

@{
}

<div class="align-content-center">
    <h1>Edit Unit</h1>
</div>
<form asp-controller="Unit" asp-action="EditUnit" method="post">
    <div class="mb-3">
        <input asp-for="Id" type="hidden" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Category's Name</label>
        <input asp-for="Name" type="text" class="form-control" value = "@Model.Name"/>
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">
            <h3>Submit</h3>
        </button>
    </div>
    
</form>