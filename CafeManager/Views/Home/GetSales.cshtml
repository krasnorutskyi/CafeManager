@model DateTime

@{
    
}

<div class="align-content-center">
    <h1>Choose the date you want to get sales from</h1>
</div>
<form asp-controller="Home" asp-action="GetSales" method="post">
    <div class="mb-3">
        <label class="form-label">Date</label>
        <input asp-for="Date" type="date" value="@Model" class="form-control"/>
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">
            <h3>Get Report</h3>
        </button>
    </div>
    
</form>